          <li class="nav-item dropdown ms-3">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag "https://res.cloudinary.com/dgu6zhgkn/image/upload/v1687351986/nick-brunner-LXspKUjsgH0-unsplash_nl996e.jpg", class: "avatar", alt: "dropdown menu" %>
