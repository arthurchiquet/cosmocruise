<div></div>
<div class="container">
  <br>
  <h1><%= @booking.trip.title %></h1>
  <hr>
  <h3>Booked by</h3>
  <p><%= @booking.user.username %></p>
  <hr>
  <% if @booking.status %>
    <button type="button" class="btn btn-light border-success text-success position-relative">
      <strong>Confirmed</strong>
      <span class="position-absolute top-0 start-100 translate-middle p-2 bg-success border border-light rounded-pill">
      </span>
    </button>
  <% else %>
    <button type="button" class="btn btn-light border-warning text-warning position-relative">
      <strong>Waiting confirmation</strong>
      <span class="position-absolute top-0 start-100 translate-middle p-2 bg-warning border border-light rounded-pill">
      </span>
    </button>
  <% end %>
  <hr>
  <div class="row">
    <div class="col-2">
      <h4>Destination</h4>
      <hr>
      <p><i class="fa-solid fa-location-dot"></i>  <%= @booking.trip.location %></p>
    </div>
    <div class="col-2">
      <h4>Departure</h4>
      <hr>
      <p><i class="fa-solid fa-plane-departure"></i>  <%= @booking.trip.departure %></p>
    </div>
    <div class="col-2">
      <h4>Spaceship</h4>
      <hr>
      <p><i class="fa-solid fa-rocket"></i>  <%= @booking.trip.vessel %></p>
    </div>
    <div class="col-2">
      <h4>Travelers</h4>
      <hr>
      <p><i class="fa-solid fa-user-group"></i>  <%= @booking.nb_travelers%></p>
    </div>
    <div class="col-2">
      <h4>Duration</h4>
      <hr>
      <p><i class="fa-solid fa-clock"></i> <%= @booking.nb_days %> days</p>
    </div>
    <div class="col-2">
      <h4>Price</h4>
      <hr>
      <p><i class="fa-solid fa-sack-dollar"></i>  <%= number_with_delimiter(@booking.total_price, :delimiter => ' ') %>â‚¬</p>
    </div>
  </div>
  <hr>
  <h3>Departure date</h3>
  <p><%= @booking.start_date %></p>
  <hr>
  <% if current_user == @booking.trip.user %>
    <%= link_to "Confirm reservation", booking_path(@booking), class:"btn btn-success",data: {turbo_method: :patch, turbo_confirm: "Confirm reservation?"} %>
  <% end %>
  <% if current_user == @booking.user %>
    <%= link_to "Delete reservation", booking_path(@booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this reservation?"}, class: 'btn btn-outline-danger' %>
  <% end %>
  <%= link_to "Back to my bookings", bookings_path, class:"btn btn-outline-light" %>
</div>
