<%= simple_form_for(@trip) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :category, collection: ["Alien World Exploration", "Luxury Space Cruises", "Space Colonization", "Temporal Space Travel", "Intergalactic Races"]  %>
    <%= f.input :departure, collection: ["Kennedy Space Center", "Baikonur Cosmodrome", "Jiuquan Satellite Launch Center", "Kourou Space Centre", "Satish Dhawan Space Centre"] %>
    <%= f.input :nb_travelers_max %>
    <%= f.input :nb_days_min %>
    <%= f.input :location %>
    <%= f.input :price_per_day %>
    <%= f.input :vessel %>
    <%= f.input :vessel_photo %>
  </div>

  <div class="form-actions bg-dark text-center">
    <%= f.button :submit, "Confirm", class:"text-white" %>
  </div>
<% end %>
