<div class="map", style="background-image: url('<%= cl_image_path @trip.photo.key %>'); height: 300px; background-size: cover; background-position: center;"></div>
<div class="container">
  <br>
  <h1><%= @trip.title %></h1>
  <%= link_to "Book a reservation", new_trip_booking_path(@trip), class: "btn btn-light" %>
  <hr>
  <div class="row">
    <div class="col-2">
      <h4>Destination</h4>
      <hr>
      <p><i class="fa-solid fa-location-dot"></i>  <%= @trip.location %></p>
    </div>
    <div class="col-2">
      <h4>Departure</h4>
      <hr>
      <p><i class="fa-solid fa-plane-departure"></i>  <%= @trip.departure %></p>
    </div>
    <div class="col-2">
      <h4>Spaceship</h4>
      <hr>
      <p><i class="fa-solid fa-rocket"></i>  <%= @trip.vessel %></p>
    </div>
    <div class="col-2">
      <h4>Max travelers</h4>
      <hr>
      <p><i class="fa-solid fa-user-group"></i>  <%= @trip.nb_travelers_max %></p>
    </div>
    <div class="col-2">
      <h4>Duration min</h4>
      <hr>
      <p><i class="fa-solid fa-clock"></i> <%= @trip.nb_days_min %> days</p>
    </div>
    <div class="col-2">
      <h4>Price</h4>
      <hr>
      <p><i class="fa-solid fa-sack-dollar"></i>  <%= @trip.price_per_day %> / day / p</p>
    </div>
  </div>
  <hr>
  <h3>Description</h3>
  <p><%= @trip.description %></p>
  <hr>
  <h3>Proposed by</h3>
  <p><%= @trip.user.email %></p>
  <hr>
  <% if @trip.user == current_user %>
    <%= link_to "Edit", edit_trip_path(@trip), class:"btn btn-outline-warning" %>
    <%= link_to "Delete", trip_path(@trip), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this trip?"}, class: 'btn btn-outline-danger' %>
  <% end %>
  <%= link_to "Back to trips list", trips_path, class:"btn btn-outline-light" %>
</div>

