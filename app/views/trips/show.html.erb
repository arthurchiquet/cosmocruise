<div class="map", style="background-image: url('<%= cl_image_path @trip.photo.key %>'); height: 300px; background-size: cover; background-position: center;"></div>
<div class="container">
  <br>
  <h1><%= @trip.title %></h1>
  <p><%= @trip.location %></p>
  <hr>
  <%= link_to "Book a reservation", new_trip_booking_path(@trip), class: "btn btn-dark" %>
  <hr>
  <% flash.each do |type, msg| %>
    <div class="alert alert-success">
      <%= msg %>
    </div>
  <% end %>
  <h3>Description</h3>
  <p><%= @trip.description %></p>
  <hr>
  <h3>Proposed by</h3>
  <p><%= @trip.user.email %></p>
  <hr>
  <h3>Details</h3>
  <div class="d-flex align-items-center">
    <i class="fa-solid fa-euro-sign ms-3"></i>
    <p class="mb-0"><%= @trip.price_per_day %></p>
  </div>
  <hr>
  <% if @trip.user == current_user %>
    <%= link_to "Edit", edit_trip_path(@trip), class:"btn btn-outline-warning" %>
    <%= link_to "Delete", trip_path(@trip), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this trip?"}, class: 'btn btn-outline-danger' %>
  <% end %>
  <%= link_to "Back to trips list", trips_path, class:"btn btn-outline-dark" %>
</div>

